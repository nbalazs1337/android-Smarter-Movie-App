<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="@color/light_blue"
                android:centerColor="@color/gradient_weak_center_placeholder"
                android:endColor="@color/dark_blue" />

            <corners
                android:radius="@dimen/radius_gradient_border"/>

        </shape>
    </item>
    <item
        android:bottom="@dimen/size_gradient_border"
        android:left="@dimen/size_gradient_border"
        android:right="@dimen/size_gradient_border"
        android:top="@dimen/size_gradient_border">
        <shape android:shape="rectangle" >
            <solid android:color="@color/background_shape_gradient" />
            <corners
                android:radius="@dimen/radius_gradient_border"/>
        </shape>
    </item>

</layer-list>