<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="@dimen/icon_button_background_padding"
        android:right="@dimen/icon_button_background_padding"
        android:top="@dimen/icon_button_background_padding"
        android:bottom="@dimen/icon_button_background_padding">
        <shape android:shape="oval">
            <solid android:color="@color/icon_background_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="ring" android:thicknessRatio="20.0"
            android:innerRadiusRatio="2.22" android:useLevel="false">
            <gradient
                android:angle="270"
                android:endColor="@color/dark_blue"
                android:startColor="@color/light_blue" />
            <size android:height="3dp"
                android:width="3dp"/>
        </shape>
    </item>


</layer-list>