<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#343878"
                android:centerX="0.4"
                android:endColor="@color/dark_blue"
                android:startColor="#07BBBC" />

            <corners android:radius="200dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#060C2B" />
            <padding android:left="15dp" />
            <corners android:radius="200dp" />
            <stroke>
                <gradient
                    android:angle="10"
                    android:centerColor="#343878"
                    android:centerX="0.4"
                    android:endColor="@color/dark_blue"
                    android:startColor="#07BBBC" />
            </stroke>

        </shape>
    </item>

</layer-list>