<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>

        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>

        <item name="postSplashScreenTheme">@style/Theme.App.Starting.Activity</item>
    </style>

    <style name="Theme.App.Starting.Activity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

</resources>