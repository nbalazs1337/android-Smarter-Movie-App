<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmarterMovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/trans</item>
        <item name="colorPrimaryVariant">@color/trans</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name ="android:itemBackground">@color/blur_color</item>
        <!-- Change edit text and hint colors to affect SearchView -->
        <item name="android:editTextColor">@color/text_grey_accent</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <!-- override colors of status and navigation bars -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/dark_blue</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SmarterMovieApp">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="DropDown.Style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/trans</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/trans</item>
        <item name="colorControlActivated">@color/trans</item>
        <item name="colorControlHighlight">@color/trans</item>
    </style>


    <style name="RIO" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/rio_yellow</item>
        <item name="colorPrimaryDark">@color/rio_orange</item>
        <item name="colorAccent">@color/rio_blue</item>
        <item name="android:windowBackground">@color/rio_green</item>
    </style>

    <style name="BlackWhite" parent=""></style>
    <style name="RedPassion" parent=""></style>

</resources>